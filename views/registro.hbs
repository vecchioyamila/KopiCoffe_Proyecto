<section class="section-header bg-1">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center">
          <h1 class="text-capitalize mb-4 font-lg text-white">Registro</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="contact-form-wrap section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-10 text-center">
                <span class="text-primary font-extra font-md">Crea tu cuenta</span>
                <h3 class="mt-3 mb-4">Completa tus datos personales</h3>

                <div class="row justify-content-center">
                    <div class="col-md-8 col-12">
                        <form id="contact-form" class="contact__form" method="post" action="/registro">
                            <div class="form-row">
                            <div class="form-group col-lg-6">
                                <input id="name" name="name" type="text" class="form-control" placeholder="Nombre*">
                            </div>
                            <div class="form-group col-lg-6">
                                <input id="surname" name="surname" type="text" class="form-control" placeholder="Apellido*">
                            </div></div>
                            <div class="form-group">
                                <input id="email" name="email" type="email" class="form-control" placeholder="Correo*">
                            </div>
                            <div class="form-group">
                                <input id="usuario" name="usuario" type="text" class="form-control" placeholder="Nombre de usuario*">
                            </div>
                            <div class="form-group">
                                <input name="password" type="password" id="password" class="form-control" placeholder="Contraseña*">
                            </div>
                            <div class="form-group">
                                <input id="dni" name="dni" type="text" class="form-control" placeholder="N° de documento*">
                            </div>
                            <div class="form-group">
                                <input id="address" name="address" type="text" class="form-control" placeholder="Dirección*">
                            </div>
                            <div class="form-group">
                                <input id="phone" name="phone" type="text" class="form-control" placeholder="Celular*">
                            </div>
                            <button class="btn btn-main btn-lg active rounded" name="submit" type="submit">Registrarse</button>
                        </form><br>
                    </div>
                </div>
            </div>    
        </div>            
    </div>                
</section>

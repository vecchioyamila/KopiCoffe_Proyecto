<section class="section-header bg-1">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center">
          <h1 class="text-capitalize mb-4 font-lg text-white">¡Confirma tu compra!</h1>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="section payment">
    <div class="container">
       <div class="row justify-content-center">
          <div class="col-md-12 col-lg-8">
            <div class=" payment-form py-6">
              <h3 class="headline mb-4 font-weight-bold border-bottom pb-3">Elige tu medio de pago</h3>
                <form class="form-top" action="index.html" method="post">
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Nombre y Apellido como figura en la tarjeta:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Nombre y Apellido">
                            </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Nombre de Tarjeta:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="Nombre de Tarjeta">
                                    <small id="passwordHelp" class="text-muted">
                                        Visa / Master Card / Amercian Express
                                    </small>
                            </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-4 col-form-label">Número de Tarjeta:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="2455 4566 4555 4561">
                            </div>
                    </div>
                        <div class="form-group row mt-4">
                            <div class="col-lg-4">
                                <label>Fecha de Vencimiento:</label>
                         </div>
                        <div class="col-lg-4 mb-3 mb-lg-0">
                            <select class="form-control">
                                <option value="Mes" disabled>Mes</option>
                                <option value="Enero">Enero</option>
                                <option value="Febrero">Febrero</option>
                                <option value="Marzo">Marzo</option>
                                <option value="Abril">Abril</option>
                                <option value="Mayo">Mayo</option>
                                <option value="Junio">Junio</option>
                                <option value="Julio">Julio</option>
                                <option value="Agosto">Agosto</option>
                                <option value="Septiembre">Septiembre</option>
                                <option value="Octubre">Octubre</option>
                                <option value="Noviembre">Noviembre</option>
                                <option value="Diciembre">Diciembre</option>
                            </select>
                        </div>
                        <div class="col-lg-4">
                            <select class="form-control">
                                <option value="Año" disabled>Año</option>
                                <option value="2020">2020</option>
                                <option value="2021">2021</option>
                                <option value="2022">2022</option>
                                <option value="2023">2023</option>
                                <option value="2024">2024</option>
                                <option value="2025">2025</option>
                                <option value="2026">2026</option>
                        </select>
                        </div>
                    </div>
                    <div class="form-group row ">
                        <label class="col-sm-4 col-form-label">Código de Seguridad:</label>
                            <div class="col-sm-8">
                                <input type="text" class="form-control" placeholder="*******">
                            </div>
                    </div>
                    <div class="form-group row mt-5 align-items-center justify-content-center">
                        <a href="/confirmacion" class="btn btn-main confirm-btn mt-3 mt-lg-0">Confirmar compra</a>
                    </div>
              </form>
            </div>
          </div>
        </div>
    </div>
</section>
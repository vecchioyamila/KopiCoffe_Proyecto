<section class="section-header bg-1">
  <div class="container">	
    <div class="row">
      <div class="col-lg-12">
        <div class="text-center">
          <h1 class="text-capitalize mb-4 font-lg text-white">Carrito</h1>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="section cart">
  <div class="container">
    <div class="row justify-content-end">
      <div class="col-lg-12">
        <div class="table-responsive">
          <table class="table text-center table-cart">
            <thead>
              <tr>
                <th scope="col" colspan="2">Producto</th>
                <th scope="col">Precio</th>
                <th scope="col">Cantidad</th>
                <th scope="col"Imagen</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              {{#each salesitems}}
               
                <td>
                  {{product_name}}
                </td>
                
                <td>{{price}}</td>
                <td>
                  <div class="input-group bootstrap-touchspin bootstrap-touchspin-injected">
                    <input class="quantity form-control form-control-sm" type="text" value="1" name="quantity">
                  </div>
                </td>
                <td><img src={{image}} style="width:20%; height:auto;" alt="" ></td>
                
                <td class="text-right"><a href="/carritoCompras/baja/{{id_product}}"><i class="ti-close close"></i></a></td>
                
              </tr>
              {{/each}}
            </tbody>
          </table>
        </div>
      </div>

      
    </div>
  </div>
</section>


